/* pages/drafting/drafting.wxss */


@media (min-width: 750px) {
  html {
    font-size: 100px !important;
  }
}

.wrapper {
  max-width: 100%;
  position: relative;
}

#myVideo {
  width: 100%;
  text-align: center;
}
.controls,.controls1 {
  position: relative;
  display: flex;
  background-color: white;
}
.controls1 {
  position: relative;
  top: 50%;
  height: 50rpx;
  width: 80px;
  margin-top: -25rpx;
  display: flex;
  background-color: white;
}
.play,.pause {
  width: 100%;
  height: 100%;
  display: flex;
}
.horizontal{
  flex-direction: row;
}
.vertical{
  flex-direction: column;
}
.text{
  display: flex;
  justify-content: center;
  align-items: center;
}
.img,.text {
  width: 50%;
  height: 100%;
}