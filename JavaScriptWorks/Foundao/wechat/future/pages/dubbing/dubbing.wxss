/*字幕*/
.lyric-bg{
    position: absolute;
    z-index:2;
    width: 100%;
    height: 537rpx;
    bottom: 0;
    left: 0;
}
.lyric-box{
    position: absolute;
    z-index: 3;
    width: 100%;
    height: 537rpx;
    padding-top: 44rpx;
    box-sizing: border-box;
    bottom: 0;
    left: 0;
}

.lyric-box .icon-box{
    position: absolute;
    left: 0;
    width: 100%;
    padding: 0 30rpx;
    box-sizing: border-box;
    top:115rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.lyric-box .icon-box .icon{
    width: 248rpx;
    height: 18rpx;
}

.lyric-box .line{
    position: relative;
    height: 36rpx;
    line-height: 36rpx;
    z-index: 3;
    width: 100%;
    text-align: center;
    margin-bottom: 25rpx;
    font-size: 30rpx;
    color: #efefef;
}

.lyric-box .cur-line{
    color: #FF2731;
    font-size: 48rpx;
    line-height: 50rpx;
    height: 50rpx;
}


/*倒计时*/
.countDown-layer{
    position: fixed;
    z-index: 999;
    width: 100%;
    height: 100%;
    top:0;
    left:0;
}

.countDown{
    position: absolute;
    left:50%;
    top:50%;
    transform: translate(-50%,-50%);
    font-size: 320rpx;
    color: #FFFFFF;
}
























