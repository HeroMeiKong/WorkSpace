/* pages/dubbing/dubbing.wxss */
@import "./../../public.wxss";

.dub-videoBox {
    width: 100%;
    height: 100%;
    background-color: #000;
    overflow: hidden;
    background-size: cover;
    background-position: center center;
    position: relative;
}

#video {
    width: 100%;
    height: 100%;
}

/*覆盖框*/
.cover-box {
    position: absolute;
    z-index:2;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
}


.back-btn{
    position: absolute;
    z-index: 999;
    top:0;
    left:0;
    width: 84rpx;
    height: 142rpx;
}

.back-btn-img{
    position: absolute;
    top:50%;
    left:50%;
    transform: translate(-50%,-50%);
    width: 24rpx;
    height: 42rpx;
}

.iphoneX-back-btn{
    height:245rpx;
}

.status-box {
    position: absolute;
    padding-top: 50rpx;
    z-index: 5;
    width: 100%;
    bottom: 0;
    left: 0;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
    overflow: visible !important;
}

.over-item{
    position: relative;
    /*z-index: 8;*/
    padding-bottom: 28rpx;
}

.over-item .middle-btn{
    width:132rpx;
    height:132rpx;
    border-radius:50%;
    margin-bottom: 18rpx;
    margin-left: 102rpx;
    margin-right: 102rpx;
}

.over-item .small-btn{
    width:98rpx;
    height:98rpx;
    border-radius:50%;
    margin-bottom: 34rpx;
}

.over-item .text{
    /*margin-top: 17rpx;*/
    font-size:26rpx;
    color: #fefefe;
    text-align: center;
    min-width: 1rpx;
    line-height: 28rpx;
    height: 28rpx;
}

/*重新开始*/
.restart-btn{
    position: absolute;
    left: 0;
    bottom: 0;
}

.restart-btn .small-btn{
    margin-left: 102rpx;
}

/*剩余时间*/
.dub-time{
    position: absolute;
    width: 100%;
    text-align: center;
    top: 0rpx;
    left:50%;
    transform: translate(-50%,0);
    font-size:34rpx;
    font-weight:bold;
    color: #ffffff;
}



/*浮层*/
.compose_layer{
    width: 100%;
    height: 100%;
    position: fixed;
    z-index: 3;
    top: 0;
    left:0;
    z-index: 100;
    background:rgba(0,0,0,0.9);
}

.composeing,.compose_success,.compose_error{
    width: 548rpx;
    /*height: 660rpx;*/
    height: 628rpx;
    position: absolute;
    top: 300rpx;
    left: 50%;
    transform: translateX(-50%);
    border-radius:14px;
    /*background-color: #ffffff;*/
    background-color: #F83450;
}

.compose_success,.compose_error{
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.compose_error{
    background-color: #ffffff;
}

.compose_success .compose_img{
    position: absolute;
    width: 100%;
    height: 100%;
    top:0;
    left:0;
    /*margin-top: 61rpx;*/
    /*width: 330rpx;*/
    /*height: 274rpx;*/
}

.compose_error .compose_img{
    margin-top: 72rpx;
    width: 268rpx;
    height: 240rpx;
}

.compose_success_text{
    position: relative;
    z-index: 3;
    padding-top: 371rpx;
    font-size: 38rpx;
    color: #FFFFFF;
}

.compose_success_info{
    position: relative;
    z-index: 3;
    margin-top: 16rpx;
    font-size: 26rpx;
    color: #FFFFFF;
}

.compose_error_text{
    padding-top: 59rpx;
    font-size: 38rpx;
    color: #666666;
}

.compose_error_info{
    margin-top: 17rpx;
    font-size: 26rpx;
    color: #999999;
}

.compose_success_footer,.compose_error_footer{
    /*border-top: 1rpx solid #eeeeee;*/
    position: absolute;
    z-index: 3;
    bottom:55rpx;
    left: 0;
    width: 100%;
    /*height: 88rpx;*/
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}

.compose_success_footer{
    /*border-top: 1rpx solid #eeeeee;*/
    margin-top: 89rpx;
}

.compose_success_footer .btn_wrapper{
    width: 218rpx;
    height: 68rpx;
}

.compose_success_footer .btn_wrapper:last-child{
    margin-left: 68rpx;
}

.compose_error_footer .btn_wrapper{
    width: 360rpx;
    height: 68rpx;
}


