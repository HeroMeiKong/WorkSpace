.canvas_poster{
    position: fixed;
    left:0;
    top: -10000rpx;
    width: 750px;
    height: 1238px;
}

.poster_layer{
    position: absolute;
    z-index: 3;
    z-index: 10;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.6);
}

/*分享相关*/
.poster_layer .save_poster{
    position: absolute;
    bottom: 0;
    left:0;
    width: 100%;
    height: 1028rpx;
    background:rgba(255,255,255,1);
    border-radius:14rpx 14rpx 0rpx 0rpx;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    align-items: center;
}

.poster_layer .save_poster .poster-shandow{
    position: absolute;
    top: 71rpx;
    width: 426rpx;
    height: 686rpx;
    left:50%;
    transform: translateX(-50%);
}

.poster_layer .save_poster .poster-bg{
    position: absolute;
    z-index: 3;
    top:0;
    left:0;
    width: 100%;
    height: 100%;
}

.poster_layer .save_poster .poster{
    position: relative;
    z-index: 9;
    margin-top: 80rpx;
    width: 400rpx;
    height: 660rpx;
    box-shadow:0rpx 4rpx 16rpx 0rpx rgba(0, 0, 0, 0.14);
    border-radius:14rpx;
    /*border: 2rpx solid #ffd892;*/
}

.poster_layer .save_poster .text{
    position: relative;
    z-index: 9;
    margin-top: 72rpx;
    font-size:26rpx;
    /*color:rgba(51,51,51,1);*/
    color:rgba(255,255,255,.8);
    width:100%;
    text-align:center;
}

