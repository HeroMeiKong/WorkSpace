.open-canvas-btn{
    position: absolute;
    z-index: 3;
    top:132rpx;
    right:30rpx;
    width: 148rpx;
    height:56rpx;
    background:rgba(0,0,0,.2);
    border-radius:28rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.iphoneX-open-canvas-btn{
    top:196rpx;
}

.open-canvas-btn-img{
    width: 26rpx;
    height: 28rpx;
    margin-left: 16rpx;
