/* pages/user/user.wxss */
@import "./../../public.wxss";

.user-page{
    width: 100%;
    min-height: 100%;
    background-color: #eeeeee;
    /*padding-top: 122rpx;*/
    box-sizing: border-box;
}


/*顶部*/
.top-box{
    width: 100%;
    padding-top: 90rpx;
    position: relative;
    z-index: 3;
    overflow: hidden;
    background-image: url('https://s-js.sports.cctv.com/host/resource/future/2diban1@2x.png');
    background-size: cover;
    background-position: center top;
}


/*背景*/
.bg{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 442rpx;
    background-size: cover;
    background-position: center center;
    /*filter:blur(80rpx);*/
}

.bg-color{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.2);
}


/*用户协议*/
.user-protocol{
    position: absolute;
    top:30rpx;
    right: 30rpx;
    width:160rpx;
    height:40rpx;
    background:rgba(0,0,0,.2);
    border-radius:20rpx;
    font-size:22rpx;
    color: #FFFFFF;
    text-align: center;
    line-height: 40rpx;
}


/*用户信息*/
.userInfo-box{
    position: relative;
    z-index: 3;
    width: 100%;
    padding:0 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    /*align-items: center;*/
}

.user-head{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    border: 2rpx solid #FFD892;
    box-sizing: border-box;
    background-size: cover;
    background-position: center center;
}

.user-otherInfo{
    margin-left: 37rpx;
}

.user-name{
    margin-top: 22rpx;
    font-size: 38rpx;
    line-height: 38rpx;
    color: #ffd892;
    font-weight: bold;
    width: 500rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}

/*个人简介*/
.user-intro{
    width: 450rpx;
    margin-top: 25rpx;
    font-size: 26rpx;
    line-height: 34rpx;
    color: rgba(255,255,255,.6);
    height: 102rpx;
}


.user-fans-attention{
    padding: 20rpx 30rpx 0rpx 30rpx;
    font-size: 26rpx;
    color: #ffffff;

}

.user-fans-attention-inner{
    padding-bottom: 30rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    border-bottom: 1rpx solid rgba(255,255,255,.3);
}

.line{
    display: inline-block;
    width: 2rpx;
    height: 24rpx;
    background-color: #ffffff;
    margin-left: 20rpx;
    margin-right: 23rpx;
}

.user-fans-attention span{
    line-height: 26rpx;
}

.user-num{
    font-weight: bold;
    font-size: 38rpx;
    margin-right: 8rpx;
}





/*tab*/
.tab-box{
    width: 100%;
    padding-left: 30rpx;
    box-sizing: border-box;
    height:87rpx;
    display: flex;
    flex-direction: row;
}

.tab-item{
    line-height: 87rpx;
    position: relative;
    font-size: 30rpx;
    color: rgba(255,255,255,6);
}
.tab-item:last-child{
    margin-left: 87rpx;
}
.tab-item.selected{
    color: #ffd892;
    font-weight: bold;
}

.tab-item.selected:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform:translateX(-50%);
    width: 48rpx;
    height: 4rpx;
    background-color: #ffd892;
}
.tab-num{
    margin-left: 8rpx;
}

/*列表*/
.list-box{
    width: 100%;
    position: relative;
    background-color: #eeeeee;
}

.product-list,.like-list{
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
}


.video-item{
    width: 248rpx;
    height: 330rpx;
    position: relative;
    background-size: cover;
    background-position: center center;
    margin-bottom: 3rpx;
}

.video-item:nth-child(3n-1){
    margin-left: 3rpx;
    margin-right: 3rpx;
}

.waiting-box{
    position: absolute;
    left:0;
    bottom: 0;
    width: 100%;
    height: 40rpx;
    background-color: rgba(0,0,0,.1);
    background-size: 20rpx 20rpx;
    background-position: 136rpx center;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/2shenhezhong@2x.png");
    background-repeat: no-repeat;
    padding-left: 164rpx;
    box-sizing: border-box;
    line-height: 40rpx;
    font-size: 22rpx;
    color: #ffffff;
}

.waiting-box.fail{
    background-position: 96rpx center;
    padding-left: 124rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/2weitongguo.png");
}

.fail-box{
    position: absolute;
    left:0;
    bottom: 0;
    width: 100%;
    height: 100%;
    background-color: #cccccc;
    background-size: 42rpx 42rpx;
    background-position: center 125rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/2weitongguo@2x.png");
    background-repeat: no-repeat;
    padding-top: 184rpx;
    box-sizing: border-box;
    font-size: 22rpx;
    color: #666666;
    text-align: center;
}

.video-zan-box{
    position: absolute;
    bottom: 6rpx;
    left:20rpx;
    display: flex;
    flex-direction: row;
}

.video-zan-box image{
    width: 28rpx;
    height: 28rpx;
}

.video-zan-box .video-zan{
    margin-left: 10rpx;
    line-height: 28rpx;
    height: 28rpx;
    font-size:26rpx;
    font-family:PingFang-SC-Bold;
    font-weight:bold;
    color: #FFFFFF;
}



.no-product{
    position: absolute;
    top:155rpx;
    left: 50%;
    transform:translateX(-50%);
    width: 240rpx;
    height: 240rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/2null1@2x.png");
    background-size: cover;
}
.no-product:after{
    content: '暂无任何作品';
    position: absolute;
    width: 240rpx;
    text-align: center;
    left: 50%;
    transform:translateX(-50%);
    bottom: -45rpx;
    color: #999999;
    line-height: 26rpx;
    font-size: 26rpx;
}


/*喜欢*/
.videoItem{
    display: inline-block;
    width:374rpx;
    height:602rpx;
    margin-bottom: 10rpx;
    background-color: #ffffff;
}

.videoItem:nth-child(2n){
    margin-left: 2rpx;
}

.videoItem-bg{
    width:374rpx;
    height:498rpx;
    background-size: cover;
    background-position: center center;
}

.videoItem .info{
    width: 100%;
    height: 104rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.videoItem .info .head{
    margin-left: 20rpx;
    width: 68rpx;
    height: 68rpx;
    background-size: cover;
    background-position: center center;
    border-radius: 50%;
}

.videoItem .info .video-des{
    margin-left: 17rpx;
    width: 232rpx;
    max-height: 60rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    font-size: 26rpx;
    line-height: 30rpx;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    color: #333333;
}

.tips{
    position:absolute;
    top:350rpx;
    left:50%;
    transform:translateX(-50%);
    padding:20rpx;
    font-size:26rpx;
    color:#FFFFFF;
    border-radius:6rpx;
    background-color:rgba(0,0,0,.2);
    z-index:99;
}

.no-more{
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #999999;
}
















