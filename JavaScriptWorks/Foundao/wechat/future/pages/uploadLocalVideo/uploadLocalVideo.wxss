/* pages/uploadLocalVideo/uploadLocalVideo.wxss */
@import "./../../public.wxss";
cover-view,cover-image{padding: 0;margin: 0;box-sizing: border-box;}

.user-page{
    width: 100%;
    min-height: 100%;
    height: 100%;
    background-color: white;
    padding-top: 122rpx;
    box-sizing: border-box;
}


/*顶部*/
.wrappers{
  position: relative;
  width: 100%;
  height: 100%;
}
#video {
  width: 100%;
  height: 100%;
}
.next{
  position: absolute;
  right: 10rpx;
  top: 20rpx;
  font-size: 20rpx;
  padding: 10rpx 20rpx;
  background-color: #ffffff;
  z-index: 1;
}
.subViideo{
  position: fixed;
  bottom: 20rpx;
  height: 100rpx;
  width: 100%;
  z-index: 1;
  display: flex;
  background-color: red;
  }
  .bar{
    height: 100%;
    border-radius: 4rpx;
    background-color: #eeeeee;
    position: absolute;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 20rpx;
  }
  .leftimg,.rightimg{
    height: 100%;
    background-color: #ffffff;
    position: absolute;
  }
  .leftimg{
    left: 0
  }
  .rightimg{
    right: 0
  }
  .barinner{
    text-align: center;
  }