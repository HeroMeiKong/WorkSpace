/* pages/subject/subject.wxss */
@import "./../../public.wxss";

.subject-page{
    width: 100%;
    padding-top: 122rpx;
    box-sizing: border-box;
    /*height:100%;*/
    /*overflow-y:auto;*/

}

.head-title{
    position: absolute;
    top:55rpx;
    left:50%;
    transform: translateX(-50%);
    font-size: 38rpx;
    line-height: 40rpx;
    color: #000000;
}

.back-btn{
    position: absolute;
    top:55rpx;
    left:30rpx;
    width: 25rpx;
    height: 40rpx;
    background-size: contain;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/1return5.png");
}

.swiper-box{
    width: 100%;
    height: 280rpx;
    /*background-color: #F83450;*/
}

.swiper-item{
    width: 100%;
    height: 100%;
}

.hot-title{
    margin-top: 42rpx;
    width: 100%;
    padding-left: 79rpx;
    box-sizing: border-box;
    color: #333333;
    font-weight: bold;
    line-height: 38rpx;
    position: relative;
}

.hot-title:after{
    content: '';
    position: absolute;
    top:0;
    left: 30rpx;
    width: 38rpx;
    height: 38rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/5remen@2x.png");
    background-size: cover;
}

.subject-list{
    width: 100%;
}

.subject-item{
    width: 100%;
    padding-bottom: 40rpx;
    position: relative;
    border-bottom: 1rpx solid #eeeeee;
}

.subject-item-head{
    width: 100%;
    height: 72rpx;
    padding: 0 51rpx 0 30rpx;
    box-sizing: border-box;
    line-height: 72rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
}

.subject-item-name{
    font-size: 30rpx;
    color: #333333;
}

.subject-item-name:before{
    content: '#';
}

.subject-item-more{
    font-size: 26rpx;
    color: #999999;
    position: relative;
}
.subject-item-more:after{
    content: '';
    position: absolute;
    width: 12rpx;
    height: 20rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/5jt1@2x.png");
    background-size: cover;
    top: 50%;
    transform: translateY(-50%);
    right: -21rpx;
}

.subject-item-list{
    width: 100%;
    height: 276rpx;
    white-space:nowrap;
}

.video-item{
    display: inline-block;
    width:208rpx;
    height:276rpx;
    margin-right: 2rpx;
    background-size: cover;
    background-position: center center;
}

.video-item:first-child{
    margin-left: 30rpx;
}

.video-item:last-child{
    margin-right: 30rpx;
}