<!--pages/dubbingTest/dubbingTest.wxml-->
<view class="user-page {{isIpx?'iphoneX':''}}">
  <backTitle noBack="{{true}}" title="配音"></backTitle>
  <view class="wrapper">
    <!-- 配音 -->
    <view id='dubbing' class='box'>
      <view class='left'>
        <text class='textTitle'>配音</text>
        <text class='textSuggest'>海量模板 轻松上手</text>
      </view>
      <view class='right'>
        <image src='../../assets/images/1peiyin2.png'></image>
      </view>
    </view>
    <!-- 拍摄 -->
    <view id='shoting' class='box'  bindtap="shotingVideo">
      <view class='left'>
        <text class='textTitle'>拍摄</text>
        <text class='textSuggest'>建议1分钟以内</text>
      </view>
      <view class='right'>
        <image src='../../assets/images/1luxiang2.png'></image>
      </view>
    </view>
    <!-- 本地上传 -->
    <view id='upload' class='box' bindtap="uploadLocalVideo">
      <view class='left'>
        <text class='textTitle'>本地上传</text>
        <text class='textSuggest'>不超过100M</text>
      </view>
      <view class='right'>
        <image src='../../assets/images/3bendi2.png'></image>
      </view>
    </view>
  </view>
</view>

