/* pages/user/user.wxss */
@import "./../../public.wxss";

.user-page{
    width: 100%;
    min-height: 100%;
    background-color: #eeeeee;
    padding-top: 122rpx;
}

/*顶部*/
.top-box{
    width: 100%;
    padding-top: 90rpx;
    background-color: rgba(0,0,0,.2);
    position: relative;
    z-index: 3;
    overflow: hidden;
    background-image: url('https://s-js.sports.cctv.com/host/resource/future/2diban1@2x.png');
    background-size: 100% 100%;
    background-position: center top;
}

/*背景*/
.bg{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 580rpx;
    background-size: cover ;
    background-position: center center;
    filter:blur(80rpx);
}

.bg-color{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.2);
}


/*用户信息*/
.userInfo-box{
    position: relative;
    z-index: 3;
    width: 100%;
    padding:0 30rpx;
    box-sizing: border-box;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    /*align-items: center;*/
}



.user-head{
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    border: 2rpx solid #ffd792;
    box-sizing: border-box;
    background-size: cover;
    background-position: center center;
}

.user-otherInfo{
    margin-left: 37rpx;
}

.user-name{
    margin-top: 24rpx;
    font-size: 38rpx;
    line-height: 38rpx;
    color: #ffd792;
    font-weight: bold;
    width: 500rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:1;
}

.attention{
    margin-top: 17rpx;
    width: 106rpx;
    height: 40rpx;
    line-height: 40rpx;
    background-color: #fe2c1d;
    border-radius: 20rpx;
    text-align: center;
    color: #ffd792;
    font-size: 26rpx;
    border: 2rpx solid #ffd792;
    box-sizing: content-box;
}



.already-attention{
    margin-top: 17rpx;
    width: 68rpx;
    height: 40rpx;
    background-color: rgba(255,255,255,.3);
    border-radius: 20rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/2yiguanzhu2.png");
    background-size: 24rpx 24rpx;
    background-repeat: no-repeat;
    background-position: center center;
}


/*个人简介*/
.user-intro{
    position: relative;
    z-index: 3;
    width: calc(100% - 60rpx);
    margin: 0 auto;
    margin-top: 34rpx;
    box-sizing: border-box;
    font-size: 26rpx;
    line-height: 34rpx;
    color: rgba(255,255,255,.6);
    height: 102rpx;
    border-bottom: 1rpx solid rgba(255,255,255,.3);
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:3;
}


/*tab*/
.tab-box{
    position: relative;
    z-index: 3;
    width: 100%;
    padding-left: 30rpx;
    box-sizing: border-box;
    height:87rpx;
    display: flex;
    flex-direction: row;
}

.tab-item{
    line-height: 87rpx;
    position: relative;
    font-size: 30rpx;
    color: rgba(255,255,255,6);
}
.tab-item:last-child{
    margin-left: 87rpx;
}
.tab-item.selected{
    color: #ffd792;
    font-weight: bold;
}

.tab-item.selected:after{
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform:translateX(-50%);
    width: 48rpx;
    height: 4rpx;
    background-color: #ffd792;
}
.tab-num{
    margin-left: 8rpx;
}

/*列表*/
.list-box{
    position: relative;
    z-index: 3;
    width: 100%;
    position: relative;
    background-color: #eeeeee;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: flex-start;
    align-items: flex-start;
}

.no-product{
    position: absolute;
    top:155rpx;
    left: 50%;
    transform:translateX(-50%);
    width: 240rpx;
    height: 240rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/2null@2x.png");
    background-size: cover;
}
.no-product:after{
    content: '暂无任何作品';
    position: absolute;
    width: 240rpx;
    text-align: center;
    left: 50%;
    transform:translateX(-50%);
    bottom: -45rpx;
    color: #999999;
    line-height: 26rpx;
    font-size: 26rpx;
}


.video-item{
    width: 248rpx;
    height: 330rpx;
    position: relative;
    background-size: cover;
    background-position: center center;
    margin-bottom: 3rpx;
}

.video-item:nth-child(3n-1){
    margin-left: 3rpx;
    margin-right: 3rpx;
}

.video-zan-box{
    position: absolute;
    bottom: 6rpx;
    left:20rpx;
    display: flex;
    flex-direction: row;
}

.video-zan-box image{
    width: 28rpx;
    height: 28rpx;
}

.video-zan-box .video-zan{
    margin-left: 10rpx;
    line-height: 28rpx;
    height: 28rpx;
    font-size:26rpx;
    font-family:PingFang-SC-Bold;
    font-weight:bold;
    color: #FFFFFF;
}







