/* 春节样式 */
.topicinner {
  height: 48rpx;
  border-radius: 24rpx;
  background-color: #fe2c1d;
  padding: 10rpx 20rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 3rpx solid #ffd892;
}

.topicinnerpic {
  height: 24rpx;
  width: 24rpx;
  margin-right: 10rpx;
}

.topicinner font {
  font-size: 24rpx;
  font-weight: 500;
  color: rgba(255, 255, 255, .6);
}

.textcontent .introduce {
  width: 100%;
  /* height: 80%; */
  height: 30%;/* 春节样式 */
  /* color: #fff;
  opacity: 0.3; */
  color: rgba(255,216,146,1);/* 春节样式 */
  font-size: 30rpx;
  /* border-top: 1px solid #fff; */
  border-bottom: 1rpx solid rgba(255,216,146,.6);/* 春节样式 */
  padding-top: 10rpx;
}

.topictype {
  position: absolute;
  width: 90%;
  height: 90%;
  /* background-color: #000;
  opacity: .5; */
  background-color: #92151A;/* 春节样式 */
  border-radius: 14px;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topictype_top {
  width: 100%;
  height: 10%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.topictype_line {
  width: 80rpx;
  height: 8rpx;
  background: rgba(255, 255, 255, 1);
  opacity: 0.6;
  border-radius: 4rpx;
}

.topictype_bottom {
  width: 90%;
  height: 90%;
  display: flex;
  flex-direction: column;
}

.topictype_box {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border-bottom: 1rpx solid rgba(255, 255, 255, .2);
  padding: 20rpx 0;
}

.topictype_pic {
  width: 24rpx;
  height: 24rpx;
  display: flex;
  justify-content: center;
}

.topictype_text {
  width: 90%;
  display: flex;
  justify-content: left;
  align-items: center;
  color: #fff;
  padding: 0 20rpx;
}

