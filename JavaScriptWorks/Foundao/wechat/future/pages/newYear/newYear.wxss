}

/*预览页面*/
.pagePreview{
  width: 100%;
  height: 100%;
}

.publish {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: #931E23;/* 春节样式 */
  display: flex;
  align-items: center;
  flex-direction: column;
  top: 0;
  left: 0;
}
.videowrapper{
  width: 690rpx;
  height: 690rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  background-image: url('https://s-js.sports.cctv.com/host/image/2018/12/18/15451249181206.png');/* 背景图片 */
