<!--pages/subject/subject.wxml-->
<view class="subjectItem-page {{isIpx?'iphoneX':''}}">
    <backTitle title="#{{top_info.sub_title}}"></backTitle>
    <view class="cover-box" wx:if="{{top_info.sub_pic}}">
        <view class="cover" style="background-image: url({{top_info.sub_pic}})"></view>
        <view class="subjectItem-title">活动说明</view>
        <view class="subjectItem-content">{{top_info.sub_desc}}</view>
    </view>
    <view class="text-box" wx:else>
        <!--底部背景-->
        <view class="bg" style="background-image: url({{video_list[0].nick_pic}})">
            <view class="bg-color"></view>
        </view>
        <view class="subjectItem-title">活动说明</view>
        <view class="subjectItem-content">{{top_info.sub_desc}}</view>
    </view>

    <view class="video-list">
        <block wx:for="{{video_list}}">
            <view class="videoItem">
                <view class="bg" style="background-image: url({{item.pic}})" bindtap="goVideo"
                      data-data="{{item}}"></view>
                <view class="info">
                    <view class="head" style="background-image: url({{item.nick_pic}})" bindtap="goUser"
                          data-data="{{item}}"></view>
                    <view class="video-des">{{item.video_desc}}</view>
                </view>
            </view>
        </block>
    </view>
</view>
