@import "./../../public.wxss";

.subjectItem-page{
    width: 100%;
    padding-top: 122rpx;
}

.head-title{
    position: absolute;
    top:55rpx;
    left:50%;
    transform: translateX(-50%);
    font-size: 38rpx;
    line-height: 40rpx;
    color: #000000;
}

.back-btn{
    position: absolute;
    top:55rpx;
    left:30rpx;
    width: 25rpx;
    height: 40rpx;
    background-size: contain;
    background-position: center center;
    background-repeat: no-repeat;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/1return5.png");
}

.cover-box .cover{
    width: 100%;
    height: 280rpx;
    background-size: cover;
    background-position: center center;
}



.cover-box .subjectItem-title{
    width: 100%;
    height: 65rpx;
    padding: 0 30rpx;
    box-sizing: border-box;
    line-height: 65rpx;
    color: #333333;
    font-size: 30rpx;
}

.cover-box .subjectItem-content{
    width: 100%;
    padding:0 30rpx 15rpx 30rpx;
    box-sizing: border-box;
    line-height: 36rpx;
    font-size: 26rpx;
    color: rgba(51,51,51,.6);
}


/*没有背景图*/
.text-box{
    width: 100%;
    padding: 76rpx 47rpx 56rpx 30rpx;
    box-sizing: border-box;
    position: relative;
    overflow:hidden;

}
.text-box .bg{
    position: absolute;
    top:0;
    left: 0;
    width: 100%;
    height: 100%;
    background-size: cover ;
    background-position: center center;
    filter:blur(80rpx);
}

.text-box .bg-color{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,.2);
}

.text-box .subjectItem-title{
    font-size: 30rpx;
    position: relative;
    z-index: 3;
    color: #ffffff;
}

.text-box .subjectItem-content{
    margin-top: 20rpx;
    font-size: 26rpx;
    position: relative;
    z-index: 3;
    color: rgba(255,255,255,.6);
}



/*视频列表*/
.video-list{
    width: 100%;
    padding-top: 14rpx;
    background-color: #eeeeee;
}

.videoItem{
    display: inline-block;
    width:374rpx;
    height:602rpx;
    margin-bottom: 20rpx;
    background-color: #ffffff;
}

.videoItem:nth-child(2n){
    margin-left: 2rpx;
}

.videoItem .bg{
    width:374rpx;
    height:498rpx;
    background-size: cover;
    background-position: center center;
}

.videoItem .info{
    width: 100%;
    height: 104rpx;
    display: flex;
    flex-direction: row;
    justify-content: flex-start;
    align-items: center;
}

.videoItem .info .head{
    margin-left: 20rpx;
    width: 68rpx;
    height: 68rpx;
    background-size: cover;
    background-position: center center;
    border-radius: 50%;
}

.videoItem .info .video-des{
    margin-left: 17rpx;
    width: 232rpx;
    max-height: 60rpx;
    display: -webkit-box;
    word-break: break-all;
    text-overflow: ellipsis;
    font-size: 26rpx;
    line-height: 30rpx;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp:2;
    color: #333333;
}

.no-more{
    width: 100%;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    font-size: 26rpx;
    color: #999999;
    background-color: #eeeeee;
}

/*立即参与*/
.rightNow{
    position: fixed;
    bottom: 42rpx;
    left: 50%;
    transform: translateX(-50%);
    width:280rpx;
    height:80rpx;
    background:rgba(248,52,80,1);
    border-radius:40rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/future/5dub@2x.png");
    background-size: 48rpx 48rpx;
    background-repeat: no-repeat;
    background-position: 40rpx center;
    padding-left: 104rpx;
    box-sizing: border-box;
    line-height: 80rpx;
    color: #FFFFFF;
    font-weight: bold;
    font-size: 34rpx;
}

.choose-layer{
    position: fixed;
    width: 100%;
    height: 100%;
    top:0;
    left:0;
    background-color: rgba(0,0,0,.6);
}

.choose-box{
    position: absolute;
    bottom: 0;
    left:0;
    width:100%;
    height:260rpx;
    background:rgba(255,255,255,1);
    border-radius:14rpx 14rpx 0rpx 0rpx;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding:40rpx 66rpx 0 66rpx;
    box-sizing: border-box;
}

.choose-item{
    width: 148rpx;
}

.choose-item image{
    width: 100%;
    height: 148rpx;
}

.choose-text{
    text-align: center;
    /*margin-top: 2rpx;*/
    font-size: 26rpx;
    color: #333333;

}




















