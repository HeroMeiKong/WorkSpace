/* pages/preview/preview.wxss */
@import "./../../public.wxss";
@import "./weui.wxss";

view,
image {
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

.user-page {
  width: 100%;
  min-height: 100%;
  height: 100%;
  background-color: white;
  padding-top: 122rpx;
  box-sizing: border-box;
}


.wrappers {
  position: relative;
  width: 100%;
  height: 100%;
  background-color: #2e2e2e;
}

.preview {
  height: 80%;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
/* screenshot */
.screenshot{
  width: 100%;
  height: 100%;
  z-index: 1;
  position: relative;
}
movable-view {
  border: 1px solid red;
}
.screenshot image{
  width: 100%;
  height: 100%;
}
.screenshot .flextoppic{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  top: -15rpx;
  left: -15rpx;
  border-radius: 50%;
}
.screenshot .flexbottompic{
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  bottom: -15rpx;
  right: -15rpx;
  border-radius: 50%;
}
.previewpic{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* bottom */
.bottom {
  height: 20%;
  width: 100%;
  position: relative;
  display: flex;
  align-items: center;
  background-color: #1f1f1f;
}

.next {
  position: absolute;
  right: 20rpx;
  top: 10rpx;
  color: #fff;
  font-size: 30rpx;
}

.option {
  width: 100%;
  height: 80%;
  display: flex;
  justify-content: space-around;
  align-items: center;
}

.img {
  height: 50rpx;
  width: 50rpx;
}

.section {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.section text {
  color: #fff;
  font-size: 20rpx;
}

/* swiper */
swiper {
  width: 100%;
  height: 100%;
}

swiper-item {
  display: flex;
  justify-content: space-around;
  align-items: center;
}


/* filter */

.filter {
  height: 100%;
  width: 100%;
}

.filterdiv,
.chosefilterdiv {
  width: 120rpx;
  margin: 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.filterdiv .filterimage {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.filterdiv .filtertext {
  font-size: 20rpx;
  color: #969696;
  padding: 10rpx;
}

.chosefilterdiv {
  background-color: #f72d46;
}

.chosefilterdiv .filterimage {
  width: 20rpx;
  height: 20rpx;
  margin: 50rpx;
}

.chosefilterdiv .filtertext {
  font-size: 30rpx;
  color: #fff;
  padding: 5rpx;
}


/* paster */
.paster {
  height: 100%;
  width: 100%;
  background-color: #1f1f1f;
  display: flex;
  flex-direction: column;
}

.paster swiper {
  width: 100%;
  height: 70%;
}

.paster_section {
  height: 30%;
  width: 100%;
  color: #5e5e5e;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 30rpx;
  border-top: 1px solid #363636;
}

.chosethispaster .font {
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
}

.chosethispaster .line {
  background-color: #ea2c44;
  width: 100%;
  height: 6rpx;
  border-radius: 3rpx;
}

.pasterdiv {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.pasterdiv .pasterimage {
  width: 100rpx;
  height: 100rpx;
}

/* music */
.music {
  height: 100%;
  width: 100%;
  position: relative;
}
.musiclist{
  position: absolute;
  width: 100%;
  height: 500rpx;
  top: -500rpx;
  z-index: 2;
  background-color: #1f1f1f;
}
.musiclistdiv{
  width: 100%;
  height: 100%;
  display: flex;
}
.musiclistdiv .musiclistleft,
.musiclistdiv .musiclistright{
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.musiclistdiv .musiclistleft{
  width: 10%;
}
.musiclistdiv .musiclistcenter{
  width: 80%;
  display: flex;
  justify-content: left;
  align-items: center;
}
.musiclistdiv .musiclistright{
  width: 10%;
}
.musiclist .playmusic{
  width: 40rpx;
  height: 40rpx;
}
.musiclist .musicname{
  font-size: 30rpx;
  color: #fff;
}
.musiclist .addmusic{
  width: 40rpx;
  height: 40rpx;
}
.musicdiv {
  width: 120rpx;
  margin: 0 10rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
}

.musicdiv .musicimage {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
}

.musicdiv .musictext {
  font-size: 25rpx;
  color: #969696;
  padding: 10rpx;
}
