<view class="newsList-layer">
    <view class="newsList-box">
        <view class="news-big-box" style="background-image: url({{newList[0].bg}})" data-id="{{newList[0].id}}" catchtap="goDetail"></view>
        <block wx:for="{{newList}}" wx:key="index">
            <block wx:if="{{index>0}}">
                <view class="news-small-box" catchtap="goDetail" data-id="{{item.id}}">
                    <view class="news-small-img" style="background-image: url({{item.bg}})"></view>
                    <view class="news-small-text">{{item.text}}</view>
                </view>
            </block>
        </block>
    </view>
</view>
