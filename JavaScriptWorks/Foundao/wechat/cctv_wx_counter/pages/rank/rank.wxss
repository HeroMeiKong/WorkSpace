/* pages/rank/rank.wxss */

.rank_box {
    width: 100%;
    height: 100%;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/rank_bg.png");
    background-size: 100% 100%;
    z-index: 1;
    position: relative;
    box-sizing: border-box;
}

.rank_top {
    width: 100%;
    color: #FFFFFF;
    overflow: hidden;
    letter-spacing: 1rpx;
}

.rank_left {
    float: left;
    width: 316rpx;
    height: 100%;
    text-align: center;
    letter-spacing: 1rpx;
    padding-top: 60rpx;
    box-sizing: border-box;
}

.rank_ranking {
    display: block;
    font-size: 26rpx;
    font-weight: 400;
    font-family: PingFangSC-Regular;
    line-height: 37rpx;
}

.rank_num {
    display: block;
    margin-top: 4rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    line-height: 67rpx;
    font-size: 48rpx;
}

.user_head {
    width: 112rpx;
    height: 112rpx;
    position: absolute;
    margin-top: 34rpx;
    border-radius: 50%;
    float: left;
}

.clear {
    clear: both;
}

.user_name {
    text-align: center;
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    line-height: 40rpx;
    letter-spacing: 1rpx;
    font-weight: 500;
}

.save_btn {
    width: 240rpx;
    height: 60rpx;
    margin: 23rpx auto 31rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/rank_save_btn.png");
    background-size: 100% 100%;
}

.save_btn_icon {
    display: inline-block;
    margin-top: 18rpx;
    margin-left: 20rpx;
    width: 25rpx;
    height: 25rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/rank_save_icon.png");
    background-size: 100% 100%;
}

.save_content {
    display: inline-block;
    margin-left: 5rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #FFFFFF;
    font-size: 24rpx;
}

.rank_right {
    float: right;
    padding-top: 60rpx;
    box-sizing: border-box;
    width: 322rpx;
    text-align: center;
    letter-spacing: 1rpx;
}

.calorie {
    display: block;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    line-height: 37rpx;
    letter-spacing: 1rpx;
    font-size: 26rpx;
}

.calorie_num {
    display: block;
    margin-top: 4rpx;
    font-size: 48rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    line-height: 67rpx;
}

.rank_content {
    width: 100%;
    height: 120rpx;
    position: relative;
    color: #466828;
}

.left_icon {
    margin: 42rpx 35rpx 41rpx 50rpx;
    width: 37rpx;
    height: 37rpx;
}

.left_num {
    padding: 40rpx 0;
    box-sizing: border-box;
    width: 124rpx;
    height: 120rpx;
    text-align: center;
    font-size: 28rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    line-height: 40rpx;
    display: inline-block;
    vertical-align: top;
}

.head_img_bg {
    position: absolute;
    left: 108rpx;
    top: 0rpx;
    width: 95rpx;
    height: 104rpx;
}

.head_img {
    width: 80rpx;
    height: 80rpx;
    margin: 20rpx 0;
    border-radius: 50%;
}

.rank_name {
    margin: 43rpx 20rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    font-size: 24rpx;
    line-height: 33rpx;
    letter-spacing: 1rpx;
    display: inline-block;
    vertical-align: top;
    overflow: hidden;
    text-overflow:ellipsis;
    white-space: nowrap;
    max-width: 400rpx;
}

.rank_calorie {
    float: right;
    font-size: 26rpx;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    line-height: 37rpx;
    margin-top: 43rpx;
    margin-right: 56rpx;
}

.poster_box {
    position: fixed;
    top: 0;
    left: 0;
    bottom: 0;
    right: 0;
    background: rgba(0,0,0,.6031);
}

.poster_content {
    margin: 48rpx auto 19rpx;
    width: 520rpx;
    height: 911rpx;
    background: #FFFFFF;
    padding: 10rpx;
    box-sizing: border-box;
}

.poster_btn {
    width: 360rpx;
    height: 98rpx;
    margin: 0 auto;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/save_poster_btn.png");
    background-size: 100% 100%;
    padding-top: 22rpx;
    box-sizing: border-box;
    text-align: center;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #FFFFFF;
    font-size: 32rpx;
}

.poster_main {
    width: 500rpx;
    height: 890rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/poster_bg.png");
    background-size: 100% 100%;
    position: relative;
    font-family: PingFangSC-Medium;
    font-weight: 500;
    color: #84C158;
    letter-spacing: 1rpx;
    padding-top: 366rpx;
    box-sizing: border-box;
}

.user_head_img {
    width: 82rpx;
    height: 82rpx;
    margin: 0 auto;
    border-radius: 50%;
    display: block;
}

.poster_userName {
    text-align: center;
    font-size: 27rpx;
    line-height: 38rpx;
}

.poster_rank {
    margin-top: 25rpx;
    margin-left: 63rpx;
    font-size: 22rpx;
    line-height: 30rpx;
    font-family: PingFangSC-Regular;
    float: left;
}

.poster_rank_num {
    float: right;
    margin-right: 65rpx;
    text-align: right;
    margin-top: 25rpx;
    font-size: 34rpx;
}

.poster_calorie {
    margin-top: 32rpx;
    margin-left: 63rpx;
    font-size: 22rpx;
    line-height: 30rpx;
    font-family: PingFangSC-Regular;
    float: left;
}

.poster_calorie_num {
    float: right;
    margin-right: 65rpx;
    text-align: right;
    margin-top: 14rpx;
    font-size: 34rpx;
}

.chengxuma {
    border-radius: 50%;
    position: absolute;
    bottom: 40rpx;
    right: 40rpx;
    width: 100rpx;
    height: 100rpx;
}

.posterCanvas {
    position: fixed;
    top: -10000000rpx;
    left: 0;
    width: 500px;
    height: 890px;
}