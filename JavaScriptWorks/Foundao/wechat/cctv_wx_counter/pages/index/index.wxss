/*规则浮层*/

.rule-layer {
  position: absolute;
  z-index: 9;
  top: 0;
  left: 0;
  width: 100%;
  padding-top: 140rpx;
  height: 100%;
  box-sizing: border-box;
  background-color: rgba(0, 0, 0, 0.6);
}

.rule-box {
  margin: 0 auto;
  width: 560rpx;
  height: 960rpx;
  background-image: url("https://s-js.sports.cctv.com/host/resource/map/rule-bg1.png");
  background-size: cover;
  position: relative;
  padding: 66rpx 32rpx 0 32rpx;
  box-sizing: border-box;
}

.rule-title {
  position: absolute;
  top: -53rpx;
  left: 50%;
  transform: translateX(-50%);
  width: 240rpx;
  height: 83rpx;
  background-image: url("https://s-js.sports.cctv.com/host/resource/map/rule-title.png");
  background-size: cover;
}

.rule-text {
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  color: rgba(59, 97, 31, 1);
  line-height: 45rpx;
}

.close-btn {
  margin: 0 auto;
  margin-top: 40rpx;
  width: 300rpx;
  height: 98rpx;
  text-align: center;
  line-height: 98rpx;
  color: rgba(255, 255, 255, 1);
  font-size: 32rpx;
  background-image: url("https://s-js.sports.cctv.com/host/resource/map/rule-layer-ok.png");
  background-size: cover;
}

