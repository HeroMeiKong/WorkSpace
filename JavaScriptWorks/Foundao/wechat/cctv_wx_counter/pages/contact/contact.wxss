/* pages/contact/contact.wxss */
.wrapper {
  width: 100%;
  height: 100%;
  background: #72AD3D;
}

.contactBack {
  position: relative;
  top: 0;
  width: 750rpx;
  height: 1334rpx;
  background-image: url('https://s-js.sports.cctv.com/host/resource/map/contact.png');
  background-repeat: no-repeat;
  background-size: contain;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.inner {
  position: relative;
  top: 630rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.contact {
  width: 558rpx;
  height: 92rpx;
  background:rgba(242,242,242,1);
  border-radius: 4rpx;
  text-align: center;
  font-size: 34rpx;
  font-weight:500;
  color: rgba(78, 140, 33, 1);
}

.contact_send {
  width: 240rpx;
  height: 98rpx;
  margin-top: 34rpx;
  background-image: url('https://s-js.sports.cctv.com/host/resource/map/contact_send.png');
