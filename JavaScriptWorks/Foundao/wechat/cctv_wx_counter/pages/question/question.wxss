/* pages/question/question.wxss */
.wrapper{
  width: 100%;
  height: 100%;
  background: url(https://s-js.sports.cctv.com/host/resource/map/Qbackground.png) no-repeat;
  background-size: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.inner{
  width: 690rpx;
  height: 900rpx;
  background-color: RGBA(218, 255, 184, 1);
  border-radius: 20rpx;
}

.brand{
  width: 158rpx;
  height: 120rpx;
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 20rpx;
}

.top{
  height: 20%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.top .number{
  width: 80%;
  height: 45rpx;
  font-size: 24rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(57,96,29,1);
  display: flex;
  justify-content: flex-end;
  align-items: center;
  margin: 20rpx 0 32rpx 0;
}

.top .number font{
  font-size: 32rpx;
  font-weight: 600;
}

.top .question{
  width: 80%;
  height: 90rpx;
  font-size: 32rpx;
  font-family: PingFangSC-Regular;
  font-weight: 400;
  color:rgba(57,96,29,1);
}

.bottom{
  height: 80%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.options{
  width: 530rpx;
  height: 100rpx;
  border-radius: 60rpx;
  background-color: RGBA(236, 255, 219, 1);
  color: RGBA(80, 86, 31, 1);
  margin-bottom: 46rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 0 60rpx;
}

.options .text{
  width: 320rpx;
  height:100rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.options image{
  width: 90rpx;
  height: 90rpx;
}

.choose{
  background:rgba(255,255,255,1);
}

.innercover{
  width: 690rpx;
  height: 900rpx;
  position: absolute;
}