/* pages/destination/destination.wxss */
.destination_box {
    width: 100%;
    height: 100%;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/destination_bg.png");
    background-size: 100% 100%;
    position: relative;
}

.destination_topBox {
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/destination_top.png");
    background-size: 100% 100%;
    width: 570rpx;
    height: 371rpx;
    position: absolute;
    top: 62rpx;
    left: 50%;
    transform: translate(-50%,0);
}

.canvasBox {
    position: absolute;
    top: -1000000rpx;
    left: 0;
    width: 750rpx;
    height: 1206rpx;
}

.destination_num {
    position: absolute;
    width: 248rpx;
    height: 91rpx;
    font-size: 62rpx;
    font-family: PingFangSC-Semiblod;
