    color: #FFFFFF;
    line-height: 87rpx;
    top: 151rpx;
    left: 153rpx;
    text-align: center;
}

.destination_btn {
    position: absolute;
    width: 300rpx;
    height: 98rpx;
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/destination_button.png");
