    font-size: 32rpx;
    font-family: PingFangSC-Regular;
    font-weight: 400;
    color: #527A2E;
    padding-top: 22rpx;
    box-sizing: border-box;
    text-align: center;
}

.ask_btn {
    left: 53rpx;
    bottom: 134rpx;
}

.accept_btn {
    right: 46rpx;
    bottom: 134rpx;
}

.save_btn {
    width: 178rpx;
    height: 54rpx;
    position: absolute;
    left: 50%;
    bottom: 39rpx;
    transform: translate(-50%,0);
    background-image: url("https://s-js.sports.cctv.com/host/resource/map/destination_save.png");
    background-size: 100% 100%;
}