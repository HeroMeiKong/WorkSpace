<!--pages/destination/destination.wxml-->
<view class="destination_box">
    <canvas canvas-id="myCanvas" class="canvasBox"></canvas>
    <view class="destination_topBox">
        <view class="destination_num">{{rank_num < 10 ? '00'+rank_num : rank_num < 100 ? '0' + rank_num : rank_num}}</view>
    </view>
    <view class="destination_news" catchtap="toSeeNews">看资讯</view>
    <view class="destination_btn ask_btn"
          bindtap="askBtn">向部长留言</view>
    <view class="destination_btn accept_btn"
          bindtap="acceptBtn">{{ rank_num*1<4&&rank_num*1>0? '参与抽奖':'参与抽奖'}}</view>
    <view class="save_btn"
          bindtap="saveImg"></view>
</view>
<!--新闻列表-->
<view class="destinationNews" catchtap="closeNewsList" wx:if="{{isNewsList}}">
    <newsList/>
</view>
